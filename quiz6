#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main()
	{
	
		char word[11]={'d','i','s','s','o','n','a','n','c','e','\0'}, display[11]={'-','-','-','-','-','-','-','-','-','-','\0'}, guess;
		int i=0, correctCounter=0, guessCounter=0;
		
		printf("Word guessing game");
		printf("\nYou have 10 guesses");
		
		while((correctCounter<10)&&(guessCounter<10))
			
			{
				
				guessCounter++;
				
				printf("\n\nTry # %d",guessCounter);
				
				printf("\nGuess a letter: ");
				scanf("\n%c",&guess);
				
				for (i=0;i<11;i++)
				
					{
						
						
						if (guess==word[i])
						
							{
							
								display[i]=guess;
								correctCounter=correctCounter+1;
							
							}
					
					}
					
					printf("\n%s",display);
				
				}
				
		if (correctCounter==10)
			{
				printf("\nCongrats, You WIN!!");
				printf("\nWon in %d guesses", guessCounter);
			}
		else
			{
				printf("\nSorry, you lost");
			}	
		return 0;
	
	}
					 