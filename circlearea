#include<stdio.h>
#include<stdlib.h>

#define PI 3.14159

int main()
	{
		float area, diameter;
		printf("\nJustin Newman's Area of a Circle Calculator!!");
		printf("\nPlease enter the diameter of your circle");
		scanf("\n%f",&diameter);
		area=PI*(diameter/2)*(diameter/2);
		printf("\nThe area of your circle is: %.2f",area);
		
		return 0;
		
	}